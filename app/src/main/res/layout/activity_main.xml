<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmadasmandar.afterbeta5.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputtext"
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:layout_marginBottom="6pt"
            android:layout_marginLeft="6pt"
            android:layout_marginRight="6pt"
            android:layout_marginTop="6pt"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/calc"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            android:onClick="calculateYourage"
            android:text="@string/buCalctxt" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
